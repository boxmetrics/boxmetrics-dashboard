  node {
    stage('Checkout') {
       checkout scm
    }
    stage('Environment') {
      sh 'git --version'
      echo "Branch: ${env.BRANCH_NAME}"
      sh 'docker -v'
    }
    stage('Build Docker test'){
     sh 'docker build -t boxmetrics-front-app --no-cache .'
    }
    stage('Deploy'){
      REGISTRY_USER = credentials('REGISTRY_USER')
      REGISTRY_PWD = credentials('REGISTRY_PWD')
        sh 'docker login -u REGISTRY_USER -p REGISTRY_PWD'
        sh 'docker tag boxmetrics-front registry.labo-devops.ml/boxmetrics-front-app'
        sh 'docker push registry.labo-devops.ml/boxmetrics-front'
      }
    }
  
  